---
apiVersion: core.eda.nokia.com/v1
kind: NodeProfile
metadata:
  name: {{ profile_name }}
  namespace: eda
spec:
  port: {{ gnmi_port }}
  annotate: false
  operatingSystem: {{ operating_system }}
  version: {{ sw_version }}
  versionPath: {{ version_path }}
  versionMatch: {{ version_match }}
  yang: {{ yang_path }}
  nodeUser: {{ node_user }}
  onboardingPassword: {{ onboarding_password }}
  onboardingUsername: {{ onboarding_username}}
  dhcp:
    managementPoolv4: '{{ pool_name }}'
  images:
  - image: https://raw.githubusercontent.com/eda-labs/clab-connector/refs/heads/main/assets/srlinux.bin
    imageMd5: https://raw.githubusercontent.com/eda-labs/clab-connector/refs/heads/main/assets/srlinux.bin.md5
